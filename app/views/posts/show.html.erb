<h2 class="title is-2"> <%= @post.title %> </h2>
<div class="content">
  <%= Post.markdown.render(@post.text).html_safe %>
</div>
<%= link_to 'Back', posts_path %>
<% if is_bruised_thumb? %>
  <%= link_to("Edit Post", edit_post_path(@post), class:"button is-link is-small is-pulled-right") %>
<% end %>
